{
  "name": "kuaukutsu/queue-core",
  "description": "General interfaces and handlers for a Task Queue.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Dmitriy Krivopalov",
      "email": "dimarik82@gmail.com"
    }
  ],
  "support": {
    "issues": "https://github.com/kuaukutsu/queue-core/issues",
    "source": "https://github.com/kuaukutsu/queue-core"
  },
  "require": {
    "php": "^8.3",
    "amphp/cache": "^2.0",
    "amphp/sync": "^2.3",
    "psr/container": "^2.0",
    "ramsey/uuid": "^4.9"
  },
  "require-dev": {
    "phpstan/phpstan": "^2.0",
    "rector/rector": "^2.0",
    "roave/security-advisories": "dev-latest",
    "slevomat/coding-standard": "^8.7",
    "squizlabs/php_codesniffer": "^3.7",
    "vimeo/psalm": "^6.13"
  },
  "autoload": {
    "psr-4": {
      "kuaukutsu\\queue\\core\\": "src"
    }
  },
  "config": {
    "platform": {
      "php": "8.3.21"
    },
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "sort-packages": true
  },
  "scripts": {
    "check": [
      "@phpcs",
      "@psalm",
      "@phpstan",
      "@rector"
    ],
    "phpcs": "vendor/bin/phpcs",
    "psalm": "vendor/bin/psalm --show-info --no-diff --no-cache",
    "phpstan": "vendor/bin/phpstan analyze",
    "rector": "vendor/bin/rector"
  },
  "prefer-stable": true
}
